{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["esnext"],
    "module": "commonjs",
    "baseUrl": ".",
    "outDir": "dist",
    "rootDir": "src",
    "paths": {
      "@/*": ["src/*"],
      "$/*": ["test/*"]
    },
    "typeRoots": ["node_modules/@types"]
  },
  "tstl": {
    "luaTarget": "5.3",
    "luaLibImport": "none",
    "noHeader": true
  },
  "noResolve": false
}
